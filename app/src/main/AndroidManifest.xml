<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.clockchess.hchessclock">
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/clock"
        android:label="@string/app_name"
        android:roundIcon="@drawable/clock"
        android:supportsRtl="true"
        android:theme="@style/Theme.HChessClock"
        tools:targetApi="31">
        <activity
            android:name="com.clockchess.hchessclock.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.clockchess.hchessclock.MainActivity"
            android:exported="true" />

        <activity
            android:name="com.clockchess.hchessclock.billings.activities.BuyCoinActivity"
            android:exported="true" />
        <activity
            android:name="com.clockchess.hchessclock.billings.activities.Subscriptions"
            android:exported="true" />
        <activity
            android:name="com.clockchess.hchessclock.billings.activities.IAPActivity"
            android:exported="true" />
    </application>

</manifest>